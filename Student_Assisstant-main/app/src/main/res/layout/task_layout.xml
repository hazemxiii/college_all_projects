<!--this layout is the design of task cards we have-->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="@color/blue2"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp">
<!--this layout is inside card view and that is the check box-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <CheckBox
            android:id="@+id/todoCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/white"
            android:buttonTint="@color/white"
            android:paddingStart="8dp"
            app:buttonIconTint="@color/white"
            tools:text="Go to the market and bring vegetables immediately today." />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
